<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:gravity="start|center"
    android:orientation="horizontal"
    android:padding="5dp">

    <TextView
        android:id="@+id/tv_Id"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="1"
        android:gravity="start"
        android:textSize="16sp"
        android:textColor="#000" />

    <TextView
        android:id="@+id/tv_icode"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:text="BR01F"
        android:textSize="16sp"
        android:textColor="#000" />

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_iname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Broast Chicken Full"
            android:textSize="16sp"
            android:textColor="#000" />
        <TextView
            android:id="@+id/tv_arabic_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Broast Chicken Full"
            android:textSize="16sp"
            android:textColor="#000" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_idname"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="BR CH F"
        android:textSize="16sp"
        android:textColor="#000" />

    <TextView
        android:id="@+id/tv_iprice"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="99.00"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="#000" />


    <TextView
        android:id="@+id/tv_icreated"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="05-15-2015 10:10:22 AM"
        android:textSize="16sp"
        android:textColor="#000" />

    <TextView
        android:id="@+id/tv_icolor"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginLeft="25dp"
        android:background="#00707e"
        android:textSize="16sp"
        android:textColor="@android:color/transparent" />

    <ImageButton
        android:contentDescription="delete_logo"
        android:id="@+id/ib_delete"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="25dp"
        android:focusable="false"
        android:src="@android:drawable/ic_delete" />

</LinearLayout>