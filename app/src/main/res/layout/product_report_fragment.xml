<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context="com.fiume.billingmechine.activity.SettingsActivity">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:paddingBottom="15dp">

        <LinearLayout
            android:id="@+id/ll01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/v2"
            android:orientation="vertical"
            android:padding="5dp">

            <LinearLayout
                android:id="@+id/ll_head"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:gravity="center|start"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:id="@+id/tv_bill_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:minWidth="300dp"
                    android:text="Item"
                    android:textColor="#000"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:gravity="end"
                    android:minWidth="120dp"
                    android:text="Price"
                    android:textColor="#000"
                    android:textSize="22sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/tv_total_qty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="70dp"
                    android:minWidth="100dp"
                    android:text="Qty Saled"
                    android:textColor="#000"
                    android:textSize="22sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/tv_total_amnt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="45dp"
                    android:gravity="end"
                    android:minWidth="150dp"
                    android:text="Total Amount"
                    android:textColor="#000"
                    android:textSize="22sp"
                    android:textStyle="bold" />
                <!--
                                <Button
                                    android:id="@+id/btn_date"
                                    android:layout_width="125dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="50dp"
                                    android:text="SELECT DATE" />-->


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/ll_head"
                android:layout_marginTop="2dp"
                android:background="#ccc" />

            <ListView
                android:id="@+id/listView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="#ccc"
                android:listSelector="@android:color/transparent"
                android:dividerHeight="1dp"
                android:footerDividersEnabled="true"
                android:layout_marginBottom="10dp"
                android:paddingBottom="10dp" />


        </LinearLayout>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="45dp"
            android:layout_gravity="bottom|end"
            android:src="@drawable/ic_filter_date"
            app:backgroundTint="@color/colorPrimary"
            app:elevation="4dp"
            app:fabSize="normal"
            app:rippleColor="#80000000" />

    </android.support.design.widget.CoordinatorLayout>

</RelativeLayout>
