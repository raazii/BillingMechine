<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item android:left="3dp" android:top="3dp">
                <shape>
                    <solid android:color="#551eaf" />
                    <corners android:radius="5dip"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <!-- SHADOW LAYER -->
            <item android:left="3dp" android:top="2dp">
                <shape>
                    <solid android:color="#FF3A1478" />
                    <corners android:radius="5dip"/>
                </shape>
            </item>
            <!-- CONTENT LAYER -->
            <item android:bottom="3dp" android:right="2dp">
                <shape>
                    <solid android:color="#551eaf" />
                    <corners android:radius="5dip"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>